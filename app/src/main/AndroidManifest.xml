<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.svenscan.svenscan">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application xmlns:tools="http://schemas.android.com/tools"
        android:name=".SvenScanApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity android:name=".activities.ScanActivity" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.ShowScannedWordActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_play_pronunciation">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ScanActivity" />
        </activity>
        <activity
            android:name=".activities.RecordPronunciationActivity"
            android:screenOrientation="portrait"
            android:label="SvenScan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ScanActivity" />
        </activity>
        <activity android:name=".activities.FavoriteListActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ScanActivity" />
        </activity>

        <activity
            android:name="com.desmond.squarecamera.CameraActivity" android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.DebugWordListActivity" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ScanActivity" />
        </activity>
        <activity android:name=".activities.StartActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>